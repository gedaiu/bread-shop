<h4 class='d-flex justify-content-between align-items-center mb-3'>
  <span class='text-primary'>Your sandwich</span>
</h4>

<ul class='list-group mb-3'>
  <li class='list-group-item d-flex justify-content-between lh-sm'>
    <div>
      <h6 class='my-0'>Bread type</h6>

      {{#if @value.breadType}}
        <small class='text-muted bread-type-value'>{{@value.breadType}}</small>
      {{else}}
        <small class='text-info'>You haven't selected a bread type yet</small>
      {{/if}}
    </div>
    <span class='text-muted'>{{this.breadPrice}}$</span>
  </li>

  <li class='list-group-item d-flex justify-content-between lh-sm'>
    <div>
      <h6 class='my-0'>Main filling</h6>
      {{#if @value.mainFilling}}
        <small class='text-muted main-filling-value'>{{@value.mainFilling}}</small>
      {{else}}
        <small class='text-info'>You haven't selected a main filling yet</small>
      {{/if}}
    </div>
    <span class='text-muted'>{{this.fillingPrice}}$</span>
  </li>

  {{#if @value.extras}}
    <li class='list-group-item d-flex justify-content-between lh-sm'>
      <div>
        <h6 class='my-0'>Extras</h6>
        <small class='text-muted extra-filling-value'>
          {{this.extras}}
        </small>
      </div>
      <span class='text-muted'>{{this.extrasPrices}}$</span>
    </li>
  {{/if}}
  <li class='list-group-item d-flex justify-content-between'>
    <span>Total (USD)</span>
    <strong>{{this.total}}$</strong>
  </li>
</ul>
